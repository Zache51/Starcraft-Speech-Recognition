				<!-- Starport units-->
				<P VAL="9">wraith</P>
				<P VAL="9">wraiths</P>
				<P VAL="10">dropship</P>
				<P VAL="10">dropships</P>
				<P VAL="11">valkyrie</P>
				<P VAL="11">valkyries</P>
				<P VAL="12">science vessel</P>
				<P VAL="12">science vessels</P>
				<P VAL="13">battlecruiser</P>
				<P VAL="13">battlecruisers</P>
				<P VAL="13">battle cruiser</P>
				<P VAL="13">battle cruisers</P>
				
				<!-- Nuke silo -->
				<P VAL="14">nuke</P>
				<P VAL="14">nukes</P>
			</L>
		</P>
	</RULE>
	
	<RULE NAME="ruleListening" TOPLEVEL="ACTIVE">
		<P>
			<L PROPNAME="ss">
				<P VAL="1">start</P>
				<P VAL="2">stop</P>
			</L>
		</P>
		<P>listening</P>
	</RULE>
	
