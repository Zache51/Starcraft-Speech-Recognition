<!-- English-American (409) -->
<GRAMMAR>
	
	<RULE NAME="ruleUpgrade" TOPLEVEL="ACTIVE">
	<P>upgrade</P>
		<P>
			<L PROPNAME="division">
				<P VAL="1">infantry</P>
				<P VAL="2">vehicle</P>
				<P VAL="3">ship</P>
			</L>
		</P>
		<P>
			<L PROPNAME="toUpgrade">
				<P VAL="1">weapons</P>
				<P VAL="2">armor</P>
				<P VAL="2">armour</P>
				<P VAL="3">plating</P>
			</L>
		</P>
	</RULE>
	
	<RULE NAME="ruleProduce" TOPLEVEL="ACTIVE">
		<P>+produce</P>
		<P>
			<L PROPNAME="numbers">
				<P VAL="1">one</P>
				<P VAL="1">+a</P>
				<P VAL="1">+an</P>
				<P VAL="2">two</P>
				<P VAL="3">-three</P>
				<P VAL="4">four</P>
				<P VAL="5">five</P>
				<P VAL="6">six</P>
				<P VAL="7">seven</P>
				<P VAL="8">+eight</P>
				<P VAL="9">nine</P>
				<P VAL="10">ten</P>
			</L>
		</P>
		<P>
			<L PROPNAME="units">
				<!-- Command Center units-->
				<P VAL="1">worker</P>
				<P VAL="1">workers</P>
				<P VAL="1">SCV</P>
				<P VAL="1">SCVs</P>
				
				<!-- Barracks units-->
				<P VAL="2">medic</P>
				<P VAL="2">medics</P>
				<P VAL="3">fire bat</P>
				<P VAL="3">fire bats</P>
				<P VAL="4">marine</P>
				<P VAL="4">marines</P>
				<P VAL="5">ghost</P>
